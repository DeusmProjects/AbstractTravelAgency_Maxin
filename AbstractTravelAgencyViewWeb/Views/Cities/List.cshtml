@model IEnumerable<AbstractTravelAgencyServiceDAL.ViewModel.CityViewModel>

@{
    ViewBag.Title = "Список городов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список городов</h2>

<p>
    @Html.ActionLink("Добавить город", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.CityId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.CityId }) |
                @Html.ActionLink("Подробнее", "More", new { id = item.CityId })
            </td>
        </tr>
    }

</table>