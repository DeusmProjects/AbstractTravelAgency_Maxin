@model IEnumerable<AbstractTravelAgencyServiceDAL.ViewModel.BookingViewModel>

@{
    ViewBag.Title = "Список броней";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список броней</h2>
@Html.ValidationSummary(true)
<p>
    @Html.ActionLink("Заказать бронь", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoucherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusBooking)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoucherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusBooking)
            </td>
            <td>
                @Html.ActionLink("Отдать на выполнение", "SetStatus", new { id = item.Id, status = "Processing" }) |
                @Html.ActionLink("Заказ готов", "SetStatus", new { id = item.Id, status = "Ready" }) |
                @Html.ActionLink("Заказ оплачен", "SetStatus", new { id = item.Id, status = "Paid" })
            </td>
        </tr>
    }

</table>