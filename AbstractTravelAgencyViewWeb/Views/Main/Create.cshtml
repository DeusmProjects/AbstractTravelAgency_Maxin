@model AbstractTravelAgencyServiceDAL.BindingModel.BookingBindingModel

@{
    ViewBag.Title = "Создание брони";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание брони</h2>


@using (Html.BeginForm("CreatePost", "Main", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class = "control-label col-md-2">Заказчик</label>
            <div class="col-md-10">
                @Html.DropDownList("CustomerId", ViewBag.Customers as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Путевка</label>
            <div class="col-md-10">
                @Html.DropDownList("VoucherId", ViewBag.Vouchers as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Количество</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Заказать" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
