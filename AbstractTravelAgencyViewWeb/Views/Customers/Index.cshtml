@model IEnumerable<AbstractTravelAgencyServiceDAL.ViewModel.CustomerViewModel>

@{
    ViewBag.Title = "Список заказчиков";
}

<h2>Список заказчиков</h2>

<p>
    @Html.ActionLink("Добавить заказчика", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFIO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerFIO)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
