@using AbstractTravelAgencyViewWeb.Controllers
@model IEnumerable<AbstractTravelAgencyServiceDAL.ViewModel.VoucherViewModel>

@{
    ViewBag.Title = "Список путевок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список путевок</h2>

<p>
    @Html.ActionLink("Создать путевку", "Index", "Voucher")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VoucherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VoucherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>